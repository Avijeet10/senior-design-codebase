<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    android:background="@drawable/get_started_onboarding_sheet"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GetStartedListDialogFragment">

    <TextView
        android:layout_width="326dp"
        android:layout_height="32dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="23dp"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:text="@string/log_in_or_sign_up"
        android:textSize="23sp">

    </TextView>

    <TextView
        android:layout_width="326dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:text="@string/get_started_bottom_sheet_text_1"
        android:textColor="#ff9ea1a7"
        android:textSize="15sp">

    </TextView>

    <Button
        android:id="@+id/mobile_user"
        android:layout_width="326dp"
        android:layout_height="47dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/login_buttons"
        android:fontFamily="@font/quicksand"
        android:text="@string/phone_number_login_text"
        android:textAllCaps="false">

    </Button>

    <Button
        android:layout_width="326dp"
        android:layout_height="47dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/login_buttons"
        android:drawableStart="@drawable/google"
        android:drawablePadding="-25dp"
        android:fontFamily="@font/quicksand"
        android:paddingStart="60dp"
        android:paddingEnd="70dp"
        android:singleLine="true"
        android:gravity="center"
        android:text="@string/continue_with_google_login"
        android:textAllCaps="false">

    </Button>

    <Button
        android:layout_width="326dp"
        android:layout_height="47dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="89dp"
        android:background="@drawable/login_buttons"
        android:fontFamily="@font/quicksand"
        android:text="@string/continue_with_facebook_login"
        android:textAllCaps="false">

    </Button>


</LinearLayout>