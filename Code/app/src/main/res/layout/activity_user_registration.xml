<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRegistration">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:backgroundTint="@color/colorAccent"
            android:text="State Farm Fit Sign Up Form"
            android:textAlignment="center"
            android:textColor="#64137A"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="699dp" />

        <EditText
            android:id="@+id/FirstName"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15sp"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/LastName"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15sp"
            android:hint="Last Name"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="368sp"
            android:layout_height="45dp"
            android:layout_marginLeft="13sp"
            />
        <View
            android:layout_width="368dp"
            android:layout_height="2dp"
            android:layout_marginLeft="16sp"
            android:background="#c0c0c0"/>

        <EditText
            android:id="@+id/UserAge"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15sp"
            android:hint="Age"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/UserWeight"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15sp"
            android:hint="Weight (lbs)"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/UserHeight"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15sp"
            android:hint="Height (cm)"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/StreetAddress"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15sp"
            android:hint="Street Address"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/ZipCode"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15sp"
            android:hint="Zip Code"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/PhNum"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15sp"
            android:hint="Phone Number"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15sp"
            android:hint="Email Address(xxxxx@xxx.com)"
            android:inputType="textEmailAddress"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:progress="@android:integer/config_shortAnimTime"
            android:progressBackgroundTint="#43A047"
            android:progressTint="#43A047"
            tools:visibility="visible" />

        <Button
            android:id="@+id/submit"
            android:layout_width="171dp"
            android:layout_height="60dp"
            android:layout_marginLeft="120sp"
            android:backgroundTint="#F88D06"
            android:shadowColor="#00805151"
            android:stateListAnimator="@android:anim/fade_in"
            android:text="Submit"
            android:textAlignment="center"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>

</ScrollView>
