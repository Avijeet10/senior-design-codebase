<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "rectangle" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item android:width="326dp" android:height="47dp">
        <shape android:shape="rectangle">
            <corners android:radius="7dp" />
            <solid android:color="#ffffffff" />
            <item android:name="android:shadowColor">#0d000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">2</item>
        </shape>
    </item>
</layer-list>