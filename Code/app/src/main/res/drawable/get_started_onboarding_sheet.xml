<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "rectangle" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="17dp" android:topRightRadius="17dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" />
            <solid android:color="#ffffffff" />
            <item android:name="android:shadowColor">#80000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">2</item>
        </shape>
    </item>

    <!-- Style for "bar_label" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item android:width="32dp" android:height="5dp" android:top="17dp" android:left="170dp" android:right="179dp" android:gravity="center_horizontal">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="#ffe2e6ed" />
        </shape>
    </item>
</layer-list>